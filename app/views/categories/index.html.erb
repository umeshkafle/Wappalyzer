<h2>Categories List</h2>
<table class="table table-hover">
  <thead>
		<th>Categories</th>
		<th>Options</th>
	</thead>
	<% @categories.each do |category|%>
	<tbody>
		<div>
		<tr>
			<td><%= link_to "#{category.categoryName}", "http://#{category.categoryName.downcase}.com", :target => '_blank'%></td>
			<td><%= link_to 'Add Application', new_category_content_path(category)%></td>
			<td><%= link_to 'View Applications', category_contents_path(category)%></td>
		</tr>
	</tbody>
	<%end%>
</table>
